
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">

    <title>Nike - React Clash Lab Admin Panel</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-sm-center mt-5">
            <div class="col-12 col-sm-6">
                <h2 class="text-center">Nike - React Clash Lab Admin Panel</h2>
                <form class="ajax-form" action="~/admin/login" method="post" data-handle="login" data-redirect="@Url.RouteUrl(ViewContext.RouteData.Values)/download">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password">
                        <div class="invalid-feedback">Incorrect username / password</div>
                    </div>
                    <div class="text-center">
                        <input class="btn btn-outline-secondary" type="submit" value="Submit">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/uifn_admin.js"></script>
</body>
</html>
